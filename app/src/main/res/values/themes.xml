<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MakanApa" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/backgroundColor</item>
        <!-- Customize your theme here. -->

        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="Theme.MakanApa.Header">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/branding</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.MakanApa.CardTitle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.MakanApa.TransparentButton">
        <item name="android:backgroundTint">@color/transparent</item>
    </style>
</resources>